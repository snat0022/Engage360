{
  "name": "functions",
  "description": "Cloud Functions for Engage360",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "@sendgrid/mail": "^8.1.0",
    "nodemailer": "^6.9.8",
    "pdfkit": "^0.14.0",
    "csv-writer": "^1.6.0",
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "typescript": "^4.9.0",
    "@types/node": "^20.0.0"
  },
  "private": true
}
